@using DataMapping.Entites
@model IEnumerable<DataMapping.Procedures.Get_Tank_Statment_Result>
@{
    ApplicationDbContext db = new ApplicationDbContext();
}
<p class="btn btn-default" style="color:red" id="message">@ViewBag.DateErr </p>
<div class="col-12">
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="save-stage" style="width:100%;">
            <thead>
                <tr>
                   
                    <th> السنة</th>
                    <th>مسلسل</th>
                    <th>الكمية</th>
                    <th> نوع الوقود</th>
                    <th>رقم التعميد</th>
                    <th>تاريخ التعميد</th>
                    <th>رقم الفاتورة</th>
                    <th> تاريخ الفاتورة</th>
                    <th> تاريخ الاستلام</th>
                    <th>أسم المحطة</th>
                  
                </tr>
            </thead>
            <tbody class="tbody">
                @if (Model.Count() != 0)
                {
                    foreach (var item in Model)
                    {
                        var car = db.Cars.FirstOrDefault(a => a.Id == item.CarId);
                <tr>

                    <td>@item.Year</td>
                    <td>@item.Serial</td>
                    <td>@item.RequestedQuantity</td>
                    <td>@item.FuelType</td>
                    <td>@item.AssignmentNo</td>
                    <td>@item.AssignmentDate</td>
                    <td>@item.InvoiceNo</td>

                    <td>@item.InvoiceDate</td>
                    <td>@item.Date.Value.ToShortDateString()</td>
                    <td>@item.StationName</td>



                </tr>
                    }

                }
                else
                {
                    <tr>
                        <td>لا يوجد بيانات....</td>
                    </tr>

                }


            </tbody>
        </table>
    </div>


</div>

<script type="text/javascript">
    $(document).ready(function () {

        $("#message").hide();
        if ($('#message').length > 0 && $.trim($('#message').text()) != "") {
            $("#message").show();
            $(".tbody").hide();
        }

    })

</script>



