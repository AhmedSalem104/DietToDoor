<div class="container">

    <table id="DisplayData" class="table table-striped table-hover table-bordered" @*id="save-stage"*@ style="width:100%;">
        <thead style="width:100%;">
            <tr>
            <tr>
                <th class="width-per-5">رقم السيارة</th>
                <th class="width-per-15"> رقم اللوحة</th>
                <th>رقم الشاسيه</th>
                <th class="width-per-3"> الموديل</th>

                <th> النوع</th>
                <th class="width-per-3"> اللون</th>
                <th class="width-per-3"> رقم الاستمارة</th>
                <th class="width-per-3"> القوة بالحصان</th>
                <th> الشركة الموردة</th>

                <th class="th_width_5">@DataMapping.Resources.Resource.Edit</th>
                <th class="th_width_5">@DataMapping.Resources.Resource.Delete</th>
                <th class="th_width_5">طباعة</th>

            </tr>

            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;">
                <td style="text-align:center"> @Html.DisplayFor(modelItem => item.CarNo)</td>
                <td> @Html.DisplayFor(modelItem => item.PanelNo)</td>

                <td>@item.ChassisNo</td>
                <td> @Html.DisplayFor(modelItem => item.ModelNo)</td>

                <td> @item.CarTypeName</td>

                <td>@item.ColorName</td>
                <td> @Html.DisplayFor(modelItem => item.CarLicenseNo)</td>

                <td> @Html.DisplayFor(modelItem => item.Horsepower)</td>
                <td>@item.SupplierName</td>
                <td class="th_width_5">
                    @if (ViewBag.CanEdit == true)
                    {
                        <a href="@Url.Action("AddOrEdit", "Cars", new { Id = @item.Id })" class="btn btn-icon btn-outline-info">
                            <i class="far fa-edit"></i>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("AddOrEdit", "Cars", new { Id = @item.Id })" class="btn btn-icon btn-outline-info disabled">
                            <i class="far fa-edit"></i>
                        </a>
                    }
                </td>
                <td class="th_width_5">
                    @if (ViewBag.CanDelete == true)
                    {
                        <a href="@Url.Action("Delete", "Cars", new { Id = @item.Id })" class="deleteItem btn btn-icon btn-outline-danger">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    }
                    else
                    {
                        <a href="@Url.Action("Delete", "Cars", new { Id = @item.Id })" class="deleteItem btn btn-icon btn-outline-danger disabled">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    }
                </td>
                <td class="th_width_5">
                    <Form action="Equipments/PrintDataRDLCById/@item.Id" method="post"> <button formtarget="_blank" type="submit" class="btn btn-outline-info" title="طباعة" style=" "><i class="fa fa-print" aria-hidden="true"></i></button></Form>



                </td>
            </tr>
            //TCost = item.TotalCost;
            //PCost = item.PaidCost;
            //RCost = item.RemainingCost;

        }

    </table>
</div>










