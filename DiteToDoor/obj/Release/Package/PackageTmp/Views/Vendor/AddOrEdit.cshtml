@model DataMapping.Entites.Vendor

@{
    ViewBag.Title = DataMapping.Resources.Resource.Vendor;
}

<style>
    .col-form-label {
        font-size: 14px !important;
        font-weight: 600;
        color: #34395e !important;
        margin-bottom: 8px;
    }
</style>
@using (Html.BeginForm("AddOrEdit", "Vendor", FormMethod.Post, new { @class = "form-horizontal", @id = "ModalForm" }))

{
    <div class="row heder_title">
        <div class="col-6">
            <h3 class="blockquote">@DataMapping.Resources.Resource.Vendor</h3>
        </div>
        <div class="col-6 text-left">

            <button type="submit" class="btn btn-icon icon-left btn-info">
                @DataMapping.Resources.Resource.save <i class="fa fa-save" aria-hidden="true"></i>
            </button>
            <a href="~/Vendor/Index" class="btn btn-icon icon-left btn-outline-warning">
                رجوع <i class="fa fa-chevron-left" aria-hidden="true"></i>
            </a>
        </div>
    </div>


    <div class="card-layout">
        <p style="color:red; font-size:10px;">@Session["msgErrV"]</p>
        <div class="row">
            <label class="col-sm-2 col-form-label">
                @DataMapping.Resources.Resource.VenNo
            </label>
            <div class="col-sm-4">
                @if (Model != null)
                {
                    @Html.EditorFor(model => model.VendorNo, new { htmlAttributes = new { Value = ViewBag.autoCode, @class = "form-control", @disabled = "disabled" } })
                    @Html.ValidationMessageFor(model => model.VendorNo, "", new { @class = "text-danger" })
                }
                else
                {
                    @Html.EditorFor(model => model.VendorNo, new { htmlAttributes = new { Value = ViewBag.autoCode, @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.VendorNo, "", new { @class = "text-danger" })
                }
            </div>

            <label class="col-sm-2 col-form-label">
                @DataMapping.Resources.Resource.Name<span style="color:red">*</span>
            </label>
            <div class="col-sm-4">
                @Html.EditorFor(model => model.SupplierName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SupplierName, "", new { @class = "text-danger" })
            </div>

            <label class="col-sm-2 col-form-label">
                @DataMapping.Resources.Resource.VendorClassificationId<span style="color:red">*</span>
            </label>
            <div class="col-sm-4">
                @Html.DropDownListFor(a => a.VendorClassificationId, null, " اختر التصنيف ", htmlAttributes: new { @id = "ParentId", @class = "select2 form-control" })
                @Html.ValidationMessageFor(model => model.VendorClassificationId, "", new { @class = "text-danger" })
            </div>

            <label class="col-sm-3 col-form-label">
                @DataMapping.Resources.Resource.IsVendorAndCustomer
