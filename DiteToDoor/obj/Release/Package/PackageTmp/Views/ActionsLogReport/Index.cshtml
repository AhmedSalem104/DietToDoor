    function GetData() {
        $.ajax({
            url: '@Url.Action("GetReportData", "ActionsLogReport")',
            dataType: 'html',
            method: 'Get',
            data: {
                FromDate: $("#FromDate").val(),
                ToDate: $("#ToDate").val(),
                UsersId: $("#Users").val(),
                SystemFunctionId: $("#SystemFunction").val()
            },
            success: function (res) {
                $("#DispplayData").html('').html(res);
            },
            error: function (err) {
                console.log(err);
            }

        })
    }
    </script>
