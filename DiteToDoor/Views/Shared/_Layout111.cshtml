        function display_ct() {
            var x = new Date()
            var x1 = x.getDay();
            if (x1 == 0) { x1 = 'Sunday' }
            if (x1 == 1) { x1 = 'Monday' }
            if (x1 == 2) { x1 = 'Tuesday' }
            if (x1 == 3) { x1 = 'Wednesday' }
            if (x1 == 4) { x1 = 'Thursday' }
            if (x1 == 5) { x1 = 'Friday' }
            if (x1 == 6) { x1 = 'Saturday' }
            // time part //
            var hour = x.getHours();
            var minute = x.getMinutes();
            var second = x.getSeconds();
            if (hour < 10) { hour = '0' + hour; }
            if (minute < 10) { minute = '0' + minute; }
            x1 = x1 + ", " + hour + ':' + minute;
            document.getElementById('ct').innerHTML = x1;
            display_c();
        }
    </script>
